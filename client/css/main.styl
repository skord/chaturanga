body
  color: #333
  font: 14px/1.5 Arial
  background: url(/images/fabric.jpg) top left repeat

h1
  color: #666
  font-weight: bold
  font-size: 2em
  text-transform: uppercase

p
  margin-bottom: 1.5em

ul#messages
  width: 100%
  height: 800px
  overflow: scroll
  margin-bottom: 1.5em

  li
    padding: 6px
    border-bottom: 1px solid #DDD

    &:nth-child(even)
      background: whitesmoke

    &:nth-child(odd)
      background: white

    &#no-messages
      font-weight: bold
      color: #555
      text-align: center
      font-size: 3em
      line-height: 788px
      border-bottom-width: 0
      background: none

    time
      float: right
      font-size: 12px

    img.gravatar
      width: 48px
      height: 48px
      border-radius: 50px
      border: 4px solid #AAA
      float: left
      margin-right: 10px

    .email
      display: inline
      font-weight: bold
      vertical-align: top

    p
      margin-top: 0.5em
      margin-bottom: 0

input[type="text"]
  padding: 6px
  width: 948px

  &.parsley-error
    border-color: #b94a48
    -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075)
    -moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075)
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075)

strong
  font-weight: bold

.container
  width: 960px
  margin: auto

span#count
  color: #DDD
  font-style: italic
  font-size: 12px
  float: right

#login-buttons
  float: right
  margin-top: 1em

  a
    text-decoration: none !important
    color: crimson

